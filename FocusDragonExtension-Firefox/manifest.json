{
  "manifest_version": 2,
  "name": "FocusDragon",
  "version": "1.0.0",
  "description": "Website blocker for deep focus",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "nativeMessaging",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "focusdragon@focusdragon.com",
      "strict_min_version": "91.0"
    }
  }
}
